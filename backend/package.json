{
  "name": "stashd-backend",
  "version": "1.0.0",
  "license": "Apache-2.0 OR LicenseRef-Commercial",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:execution": "vitest run --config vitest.config.execution.ts",
    "test:all": "npm run test && npm run test:execution",
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:status": "tsx src/scripts/migrate.ts --status"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.34.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.0.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.11",
    "otplib": "^12.0.1",
    "pg": "^8.13.1",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.3.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@testcontainers/mongodb": "^11.10.0",
    "@testcontainers/mysql": "^11.10.0",
    "@testcontainers/postgresql": "^11.10.0",
    "@testcontainers/redis": "^11.10.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.10",
    "@types/qrcode": "^1.5.6",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.15",
    "mongodb": "^7.0.0",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.15"
  }
}
