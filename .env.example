# Stashd Environment Configuration
# Copy this file to .env and fill in your values
#
# For Docker Compose: Place .env in project root (next to docker-compose.yml)
# For local development: Copy to backend/.env and frontend/.env as needed

# =============================================================================
# REQUIRED SECRETS (generate secure random values!)
# =============================================================================

# Database password
# Generate with: openssl rand -base64 24
DB_PASSWORD=

# JWT secret for authentication tokens (minimum 32 characters)
# Generate with: openssl rand -base64 48
JWT_SECRET=

# Encryption secret for sensitive data in database
# Generate with: openssl rand -base64 48
ENCRYPTION_SECRET=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DB_USER=postgres
DB_NAME=stashd
# For Docker Compose, DB_HOST is the service name (postgres)
# For local development, use localhost
DB_HOST=postgres
DB_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# For Docker Compose, REDIS_HOST is the service name (redis)
# For local development, use localhost
REDIS_HOST=redis
REDIS_PORT=6379
# Optional: Redis authentication (leave empty if not required)
REDIS_USERNAME=
REDIS_PASSWORD=

# =============================================================================
# FRONTEND / CORS CONFIGURATION
# =============================================================================

# Frontend URL (for CORS)
CORS_ORIGIN=http://localhost:5173

# API URL (used by frontend)
VITE_API_URL=http://localhost:8080/api

# =============================================================================
# BACKUP STORAGE
# =============================================================================

# Path for local backup storage (host path, mounted into container)
BACKUP_PATH=./backups

# =============================================================================
# OPTIONAL: LICENSE
# =============================================================================

# License public key (leave empty for open source edition)
LICENSE_PUBLIC_KEY=
